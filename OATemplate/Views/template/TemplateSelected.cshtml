@using System.Xml;

@model OATemplate.Models.Template

Vald produkt: <b>@Model.selectedPublication</b><br />
Antal BS sidor: <b>@Model.numberOfPages</b><br />
<br />
Vald template: <b>@Model.selectedTemplate</b><br />

<form action="/Template/TemplateCommitted">
    @foreach (XmlNode towerNode in Model.Press.SelectSingleNode("/Press").ChildNodes)
    {
        <fieldset>

            @{
                string currentTower = towerNode.Name.ToString();
            }

            <legend>@(currentTower)</legend>

            <table style="width:5px">
                <tr>
                    <td>High</td>
                    <td>A<input type="number" name="@(currentTower)Cyl7HA" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/High/SectA/Page").InnerText)" /></td>
                    <td>B<input type="number" name="@(currentTower)Cyl7HB" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/High/SectB/Page").InnerText)" /></td>
                    <td>C<input type="number" name="@(currentTower)Cyl7HC" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/High/SectC/Page").InnerText)" /></td>
                    <td>D<input type="number" name="@(currentTower)Cyl7HD" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/High/SectD/Page").InnerText)" /></td>
                    <td /><td />
                    <td>D<input type="number" name="@(currentTower)Cyl8HD" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/High/SectD/Page").InnerText)" /></td>
                    <td>C<input type="number" name="@(currentTower)Cyl8HC" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/High/SectC/Page").InnerText)" /></td>
                    <td>B<input type="number" name="@(currentTower)Cyl8HB" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/High/SectB/Page").InnerText)" /></td>
                    <td>A<input type="number" name="@(currentTower)Cyl8HA" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/High/SectA/Page").InnerText)" /></td>
                </tr>
                <tr>
                    <td>Low</td>
                    <td><input type="number" name="@(currentTower)Cyl7LA" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/Low/SectA/Page").InnerText)" /></td>
                    <td><input type="number" name="@(currentTower)Cyl7LB" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/Low/SectB/Page").InnerText)" /></td>
                    <td><input type="number" name="@(currentTower)Cyl7LC" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/Low/SectC/Page").InnerText)" /></td>
                    <td><input type="number" name="@(currentTower)Cyl7LD" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl7/Low/SectD/Page").InnerText)" /></td>
                    <td /><td />
                    <td><input type="number" name="@(currentTower)Cyl8LD" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/Low/SectD/Page").InnerText)" /></td>
                    <td><input type="number" name="@(currentTower)Cyl8LC" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/Low/SectC/Page").InnerText)" /></td>
                    <td><input type="number" name="@(currentTower)Cyl8LB" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/Low/SectB/Page").InnerText)" /></td>
                    <td><input type="number" name="@(currentTower)Cyl8LA" min="1" max="160" value="@(Model.Press.SelectSingleNode("/Press/" + currentTower + "/Cyl8/Low/SectA/Page").InnerText)" /></td>
                </tr>
            </table>
        </fieldset>

    }
    <br />
    <input type="hidden" name="selctPub" value="@Model.selectedPublication">
    <input type="hidden" name="NrPages" value="@Model.numberOfPages">
    <input type="submit">
</form>
